{
  "name": "watchthis-user-service",
  "version": "3.0.1",
  "description": "User management service for WatchThis",
  "keywords": [],
  "license": "ISC",
  "author": "Drue Wilding",
  "files": [
    "dist/src",
    "public",
    "views"
  ],
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "database:setup": "npx prisma db push",
    "database:test:setup": "dotenv -e .env.test -- npx prisma db push",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\" \"npm run tailwind:css:watch\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "package:lint": "npx npm-package-json-lint .",
    "start": "node dist/src/server.js",
    "start:watch": "nodemon dist/src/server.js",
    "tailwind:css": "postcss src/styles/style.css -o public/styles/style.css",
    "tailwind:css:watch": "postcss src/styles/style.css -o public/styles/style.css --watch --verbose",
    "test": "NODE_ENV=test node --test dist/test/*.test.js"
  },
  "dependencies": {
    "@prisma/client": "6.17.1",
    "app-root-path": "3.1.0",
    "bcrypt": "6.0.0",
    "connect-flash": "0.1.1",
    "connect-pg-simple": "10.0.0",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.2",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "prisma": "6.17.1",
    "pug": "3.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "10.1.0",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/postcss": "4.1.14",
    "@tailwindcss/typography": "0.5.19",
    "@types/bcrypt": "6.0.0",
    "@types/connect-flash": "0.0.40",
    "@types/connect-pg-simple": "7.0.3",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/passport": "1.0.17",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.3",
    "autoprefixer": "10.4.21",
    "concurrently": "9.2.1",
    "dotenv-cli": "10.0.0",
    "eslint-config-plus-prettier": "4.2.3",
    "nodemon": "3.1.10",
    "postcss": "8.5.6",
    "postcss-cli": "11.0.1",
    "postcss-minify": "1.2.0",
    "supertest": "7.1.4",
    "supertest-session": "5.0.1",
    "tailwindcss": "4.1.14",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "prettier": "eslint-config-plus-prettier/prettier"
}
